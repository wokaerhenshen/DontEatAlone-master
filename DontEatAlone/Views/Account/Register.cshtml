@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<head>
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong>
                    Date:
                </strong>
                <input asp-for="BirthDay" type="date" id="date">
                <span asp-validation-for="BirthDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-form-legend col-sm-2">Sex</div>
                    <div class="col-sm-10">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="radio" asp-for="Gender" class="form-check-input"   id="sexRadios1" value="male"> Male
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="radio" asp-for="Gender" class="form-check-input"   id="sexRadios2" value="female"> Female
                            </label>
                        </div>
                        <div class="form-check disabled">
                            <label class="form-check-label">
                                <input type="radio" asp-for="Gender" class="form-check-input"   id="sexRadios3" value="others"> Others
                            </label>
                        </div>
                    </div>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            @*For Azure recaptcha:6LdqLkYUAAAAAFnx8Zk4hCba-qUH6RIber1ZSYK1*@
            <div class="g-recaptcha" data-sitekey="6LdqLkYUAAAAAFnx8Zk4hCba-qUH6RIber1ZSYK1"></div>

            @*For localhost recaptcha:6LfWdUMUAAAAAFcRp28GqcVQcetKrSN7HClg2VEJ*@
            @*<div class="g-recaptcha" data-sitekey="6LfWdUMUAAAAAFcRp28GqcVQcetKrSN7HClg2VEJ"></div>*@

            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <recaptcha-script validation-message-element-id="recaptchaErrorMessage" />
}
